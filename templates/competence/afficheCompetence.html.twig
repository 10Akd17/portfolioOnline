{% extends 'base.html.twig' %}

{% block body %}


<h3>MES COMPETENCES</h3>

    <section class="portfolio-section" id="portfolio">
        <div class="portfolio-section-inner" >

        {% for competence in competence %}

            <div class="portfolio-section-flex">

                <div class="portfolio-section-data" ;>

                  <img src="{{ competence.logoComptence }}" style="width: 300px; height: 300px;" class="card-img-top" alt="..."> 

                    <div class="portfolio-section-text">

                        <div class="portfolio-section-text-inner">
                            <p class="card-text"> {{ competence.nomCompetence}}</p>

                            <div class="progress">

                                <div class="progress-bar w-50" role="progressbar" aria-valuenow="75" aria-valuemin="0"
                                    aria-valuemax="100"><p class="card-text"> {{ competence.niveauCompetence}}</p>
                                
                                </div>
                            </div><p class="card-text"> {{ competence.description}}</p>
                        </div>
                    </div>
               </div>          

                {% if app.user %}
                  <a href="{{ path('app_competence_edit', { id: competence.id }) }}" class="btn btn-primary">Modifier</a>  
                  <a href="{{ path('app_competence_delete', { id: competence.id }) }}" class="btn btn-danger">Supprimer</a>  
                {% endif %}
              
           </div>
       {% endfor %}
     </div>
          

    </section>
{% endblock %}        
